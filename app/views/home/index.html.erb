<% @articles.each do |a| %>
	<div class="card">
	<div class="card-body">
	<div class="row">
		<div class="col-12">
			
	<h3><%= link_to a.title,a.title.parameterize + "-" + a.id.to_s %></h3>
		</div>
		<div class="col-lg-3">
			<%= image_tag( a.image.url,alt:'Image',class:'img img-thumbnail')  if a.image? %>
		</div>
	</div>

	</div>
</div>
<br>
<% end %>