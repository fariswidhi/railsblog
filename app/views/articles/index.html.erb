<h3>Listing Articles</h3>

<%= link_to 'New Article', new_article_path %>
<table>
	<thead>
		<th>Title</th>
		<th>Text</th>
		<th>Option</th>
	</thead>

	<% @articles.each do  | a | %>
	<tr>
		<td><%= a.title %></td>
		<td><%= a.text %></td>
		<td><%= link_to 'Show',article_path(a) %> <%= link_to 'Edit',edit_article_path(a) %>
			<%= link_to 'Delete',article_path(a),method: :delete,
			data: {confirm: 'Yakin?'} %>

		</td>
	</tr>

	<% end %>
</table>