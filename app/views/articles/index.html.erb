	<h3>Listing Articles</h3>

<%= link_to 'New Article', new_article_path %>
<table class="table table-hover">
	<thead>
		<th>Title</th>

		<th>Option</th>
	</thead>
	
	<tbody>
	<% @articles.each do  | a | %>
	<tr>
		<td><%= a.title %></td>
		<td><%= link_to 'Show',article_path(a),'class'=>'btn btn-warning' %> <%= link_to 'Edit',edit_article_path(a),'class'=>'btn btn-info' %>
			<%= link_to 'Delete',article_path(a),'class'=>'btn btn-danger',method: :delete,
			data: {confirm: 'Sure?'} %>

		</td>
	</tr>

	<% end %>
	</tbody>
</table>


